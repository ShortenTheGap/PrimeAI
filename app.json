{
  "expo": {
    "name": "cnnected",
    "slug": "context-crm",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "backgroundColor": "#0f172a",
      "resizeMode": "contain"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourname.contextcrm",
      "buildNumber": "17",
      "infoPlist": {
        "NSContactsUsageDescription": "We need access to your contacts to notify you when you add someone new.",
        "NSMicrophoneUsageDescription": "We need microphone access to record voice notes.",
        "NSLocationWhenInUseUsageDescription": "We use your location to remember where you met contacts.",
        "UIBackgroundModes": [
          "audio",
          "fetch",
          "audio",
          "fetch"
        ],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.yourname.contextcrm",
      "permissions": [
        "READ_CONTACTS",
        "POST_NOTIFICATIONS",
        "RECORD_AUDIO",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "scheme": "com.googleusercontent.apps.637329769856-2o93eou06te2g1q92ccii3tjg6f0ekhu",
    "plugins": [
      "expo-notifications"
    ],
    "extra": {
      "eas": {
        "projectId": "72de8d95-4b39-49c7-a3e0-5dc41ad484e0"
      },
      "googleClientId": "637329769856-2o93eou06te2g1q92ccii3tjg6f0ekhu.apps.googleusercontent.com"
    }
  }
}
