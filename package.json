    "start": "node server/index.js",
    "install-all": "npm install && cd client && npm install"
  },
  "keywords": ["crm", "networking", "ai", "voice", "context-capture"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "better-sqlite3": "^9.2.2",
    "openai": "^4.20.1",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}
