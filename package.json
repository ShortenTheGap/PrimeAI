{
  "name": "context-aware-crm",
  "version": "1.0.0",
  "description": "Context-Aware Contact Capture CRM - Voice-first networking context capture",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
